<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.postnumbersearch.MainActivity">
    <LinearLayout
        android:paddingBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        //title
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_margin"
                android:paddingTop="@dimen/default_margin5"
                android:paddingBottom="@dimen/default_margin5"
                android:src="@drawable/backicon"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/onekey_search"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:text="暂无查询信息"
            android:layout_margin="@dimen/default_margin"
            android:textColor="@color/dark_gray"
            android:visibility="visible"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_width="match_parent"
            android:verticalScrollbarPosition="right"
            android:layout_height="match_parent"
            android:scrollbars="vertical" >
        </android.support.v7.widget.RecyclerView>
        //webview
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webView"
                />
            <ImageView
                android:id="@+id/full_screen"
                android:layout_margin="@dimen/default_margin5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="@dimen/default_margin5"
                android:visibility="gone"
                android:src="@drawable/fullscreen"/>
        </RelativeLayout>

    </LinearLayout>
    //progressBarLayout
    <RelativeLayout
        android:id="@+id/progressBar1_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:background="#77000000">
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="false"
            style="?android:attr/progressBarStyleLarge"
            />
        <TextView
            android:layout_below="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载数据，请稍后"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/switch_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/btn_postnumber_selector"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="查看地图"/>

    <!--<com.example.postnumbersearch.BannerView-->
        <!--android:id="@+id/banner_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom"-->
        <!--/>-->
</FrameLayout>
